config SND_RK_SOC_SPDIF
	bool "spdif support for rockchip rk29 or rk30"
	depends on SND_RK29_SOC 
	select SND_ROCKCHIP_SPDIF
	help
	  Say Y if you want to add support for SoC audio on rockchip
	  with the spdif.
