  bool "Set i2s type"
  default SND_RK29_CODEC_SOC_SLAVE
	config SND_RK29_CODEC_SOC_MASTER
		tristate  "Codec run in Master"

	config SND_RK29_CODEC_SOC_SLAVE
		tristate  "Codec run in Slave"
endchoice

